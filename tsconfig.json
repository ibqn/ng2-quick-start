{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "outDir": "build/"
  },
  "compileOnSave": false,

  "exclude": [
    "**/main-aot.ts",
    "node_modules/**",
    "!node_modules/@types/**",
    "aot/**"
  ],

  "filesGlob": [
    "src/**/*.ts"
  ]
}
